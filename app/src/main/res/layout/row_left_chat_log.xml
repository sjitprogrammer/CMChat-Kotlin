<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="@drawable/rounded_edittext_input"
        android:maxWidth="240dp"
        android:padding="16dp"
        android:text="This is message asasdasdasdasd"
        app:layout_constraintStart_toEndOf="@+id/row_new_message_imageview"
        app:layout_constraintTop_toTopOf="@+id/row_new_message_imageview" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/row_new_message_imageview"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:elevation="2dp"
        android:padding="3dp"
        android:src="@mipmap/ic_launcher"
        app:civ_border_color="#000"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>